{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["esnext"],
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "rootDir": "./",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "outDir": "dist"
  },
  "ts-node": {
    "transpileOnly": true,
    "emit": false
  },
}
